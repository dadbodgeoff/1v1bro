# App
APP_NAME="1v1 Bro"
DEBUG=false
API_V1_PREFIX=/api/v1

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# JWT - RS256 Configuration (Requirements: 1.2, 12.4)
# For RS256, use private/public key pair instead of secret
JWT_ALGORITHM=RS256
JWT_EXPIRATION_HOURS=24
JWT_PRIVATE_KEY_PATH=/secrets/jwt-private.pem
JWT_PUBLIC_KEY_PATH=/secrets/jwt-public.pem
# Fallback for HS256 (development only)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Redis Configuration (Requirements: 11.1)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Google Cloud Storage (Requirements: 10.1)
GCS_BUCKET_NAME=1v1bro-user-media
GCS_PROJECT_ID=your-gcp-project
GCS_CREDENTIALS_PATH=/secrets/gcs-credentials.json
CDN_BASE_URL=https://cdn.1v1bro.com

# Google Cloud Pub/Sub (Requirements: 8.1)
PUBSUB_PROJECT_ID=your-gcp-project
PUBSUB_CREDENTIALS_PATH=/secrets/pubsub-credentials.json
PUBSUB_TOPIC_PREFIX=1v1bro

# Rate Limiting (Requirements: 1.3, 7.2)
RATE_LIMIT_AUTH=10
RATE_LIMIT_GAME=1000
RATE_LIMIT_LEADERBOARD=100
RATE_LIMIT_UPLOAD=10

# Game Settings
QUESTIONS_PER_GAME=15
QUESTION_TIME_SECONDS=30
RECONNECT_TIMEOUT_SECONDS=30
LOBBY_ABANDON_TIMEOUT_SECONDS=60

# Battle Pass Settings (Requirements: 4.3, 4.4)
XP_WIN=100
XP_LOSS=50
XP_PER_KILL=5
XP_PER_STREAK=10
XP_PER_SECOND=0.1
XP_MIN=50
XP_MAX=300
XP_PER_TIER=1000

# ELO Settings (Requirements: 5.1, 5.4)
ELO_STARTING=1200
ELO_MIN=100
ELO_MAX=3000
ELO_K_FACTOR_LOW=32
ELO_K_FACTOR_MID=24
ELO_K_FACTOR_HIGH=16
