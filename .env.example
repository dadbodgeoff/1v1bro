# ===========================================
# 1v1bro Production Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Ports (DO NOT CHANGE - hardcoded in startup scripts)
FRONTEND_PORT=5173
BACKEND_PORT=8000
REDIS_PORT=6379

# App Settings
APP_NAME="1v1 Bro"
DEBUG=false
API_V1_PREFIX=/api/v1

# Frontend Build Args (used during docker build)
VITE_API_URL=
VITE_WS_URL=

# Supabase (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Frontend Supabase (VITE_ prefix exposes to client for tileset loading)
VITE_SUPABASE_URL=https://your-project.supabase.co

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=generate-a-secure-random-key-here
JWT_EXPIRATION_HOURS=24

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Google Cloud Storage (Optional - for user uploads)
GCS_BUCKET_NAME=
GCS_PROJECT_ID=
CDN_BASE_URL=

# Rate Limiting
RATE_LIMIT_AUTH=10
RATE_LIMIT_GAME=1000
RATE_LIMIT_LEADERBOARD=100

# Game Settings
QUESTIONS_PER_GAME=15
QUESTION_TIME_SECONDS=30
RECONNECT_TIMEOUT_SECONDS=30

# XP/Battle Pass
XP_WIN=100
XP_LOSS=50
XP_PER_KILL=5
XP_PER_TIER=1000

# ELO
ELO_STARTING=1200
ELO_MIN=100
ELO_MAX=3000
